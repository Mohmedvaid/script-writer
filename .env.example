# Runtime
NODE_ENV=development
PORT=3000

# LLM choice: openai | gemini
LLM_PROVIDER=openai

# OpenAI specifics (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=YOUR_OPENAI_KEY
OUTLINE_MODEL=gpt-4o
IMAGE_MODEL=dall-e-3
IMAGE_TEXT_MODEL=gpt-4o

# Optional Gemini key
# GEMINI_API_KEY=

# Defaults
IMAGES_PER_CHAPTER=3
CHAPTER_COUNT=15
