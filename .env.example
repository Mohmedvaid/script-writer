# ───────────────────── runtime ─────────────────────
NODE_ENV=development
PORT=3000

# ────────────────── provider & auth ────────────────
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...

# ────────────────── model choices ──────────────────
OUTLINE_MODEL=gpt-4o
SETTING_MODEL=gpt-4o-mini
SCRIPT_MODEL=gpt-4.1-mini

SCRIPT_MAX_TOKENS=3000
IMAGE_MODEL=gpt-image-1
IMAGE_TEXT_MODEL=gpt-4o
IMAGE_QUALITY=low
IMAGE_SIZE=landscape

# ────────────────── generation defaults ────────────
IMAGES_PER_CHAPTER=20
CHAPTER_COUNT=2
SCRIPT_CHAPTER_COUNT=15